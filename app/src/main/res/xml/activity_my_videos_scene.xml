<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="1000">
        <OnSwipe
            motion:touchAnchorId="@id/myVideosList"
            motion:dragDirection="dragUp"/>
        <KeyFrameSet>

            <KeyAttribute
                motion:motionTarget="@+id/textView"
                motion:framePosition="0"
                android:translationY="0dp"
                android:translationX="0dp"/>
            <KeyAttribute
                motion:motionTarget="@+id/textView"
                motion:framePosition="30"
               android:alpha="1"/>
            <KeyAttribute
                motion:motionTarget="@+id/textView"
                motion:framePosition="60"
                android:translationY="0dp"
                android:translationX="-140dp"
                android:scaleY="0"
                android:scaleX="0"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/textView"
                motion:framePosition="100"
                android:translationY="-15dp"
                android:translationX="-140dp"
                android:scaleY="0"
                android:scaleX="0"
                android:alpha="0"
                />
            <KeyAttribute
                motion:motionTarget="@+id/section_icon"
                motion:framePosition="0"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:translationY="0dp"
                />
            <KeyAttribute
                motion:motionTarget="@+id/section_icon"
                motion:framePosition="40"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:translationY="0dp"
                />
            <KeyAttribute
                motion:motionTarget="@+id/section_icon"
                motion:framePosition="50"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:translationY="0dp"
                />
            <KeyAttribute
                motion:motionTarget="@+id/section_icon"
                motion:framePosition="100"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:translationY="-20dp"
                />
            <KeyAttribute
                motion:motionTarget="@+id/background_header"
                motion:framePosition="100"
                android:layout_height="80dp"
                android:translationY="-24dp" />
            <KeyAttribute
                motion:motionTarget="@+id/background_header"
                motion:framePosition="60"
                android:layout_height="80dp"
                android:translationY="0dp" />
            <KeyAttribute
                motion:motionTarget="@+id/background_header"
                motion:framePosition="60"
                android:layout_height="80dp"
                />
            <KeyAttribute
                motion:motionTarget="@+id/background_header"
                motion:framePosition="100"
                android:layout_height="56dp"
                />
            <KeyAttribute
                motion:motionTarget="@+id/myVideosList"
                motion:framePosition="0"
                android:layout_marginTop="70dp"
                />
            <KeyAttribute
                motion:motionTarget="@+id/myVideosList"
                motion:framePosition="60"
                android:layout_marginTop="70dp"
                />
            <KeyAttribute
                motion:motionTarget="@+id/myVideosList"
                motion:framePosition="100"
                android:layout_marginTop="46dp"
                />



        </KeyFrameSet>
    </Transition>


    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myVideosList"
            android:layout_marginTop="70dp"
            motion:layout_constraintTop_toTopOf="@+id/loading_background"
             />
        <Constraint
            android:id="@+id/textView"
            motion:layout_constraintStart_toEndOf="@+id/section_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

             />


        <Constraint
            android:id="@+id/section_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="1dp"

             />
        <Constraint
            motion:layout_constraintEnd_toEndOf="@+id/background_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/myVideosList"
            android:rotation="90"
            motion:layout_constraintTop_toTopOf="@+id/loading_background"
            android:id="@+id/menu_icon"
            android:layout_marginTop="24dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">


        <Constraint
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myVideosList"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="46dp"
             />
        <Constraint
            android:id="@+id/textView"
            motion:layout_constraintStart_toEndOf="@+id/section_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:alpha="1" />
        <Constraint
            android:id="@+id/section_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="1dp"

             />
        <Constraint
            android:id="@+id/menu_icon"
            motion:layout_constraintEnd_toEndOf="@+id/background_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintBottom_toTopOf="@+id/myVideosList"
            android:rotation="90"
            motion:layout_constraintTop_toTopOf="@+id/loading_background"
            android:layout_marginTop="24dp" />


    </ConstraintSet>

</MotionScene>
